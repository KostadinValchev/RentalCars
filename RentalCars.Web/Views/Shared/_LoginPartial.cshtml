@using Microsoft.AspNetCore.Identity
@using RentalCars.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> _userManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Profile</a>
            </li>
            @if (SignInManager.IsSignedIn(User) && !User.IsInRole(WebConstants.AdminRole) && !User.IsInRole(WebConstants.AgencyRole))
            {
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Manage Booking<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a asp-area="" asp-controller="Booking" asp-action="UserLastBooking">Last Booking</a>
                            <a asp-area="" asp-controller="Users" asp-action="BookingHistory">My booking history</a>
                        </li>
                    </ul>
                </li>
            }
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
