@model IEnumerable<CarDetailsServiceModel>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
                Car Make
            </th>
            <th>
                Car Model
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Available
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
            {
            <tr>
                <th>
                    @{
                        var base64 = car.AgencyLogo != null ? Convert.ToBase64String(car.AgencyLogo.Data) : string.Empty;
                        var logoSrc = String.Format("data:image/png;base64,{0}", base64);
                    }
                    <img src="@logoSrc" alt="..." class="img-thumbnailSearch">
                </th>
                <th>
                    @{
                        var imageBase64 = car.Image != null ? Convert.ToBase64String(car.Image.Data) : string.Empty;
                        var imageSrc = String.Format("data:image/png;base64,{0}", imageBase64);
                    }
                    <a href="http://localhost:58291/cars/details/@car.Id">
                        <img src="@imageSrc" alt="..." class="img-thumbnailSearch">
                    </a>
                </th>
                <th>
                    @car.Make
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @car.Price &#36;
                </th>
                <th>
                    @car.Category
                </th>
                <th>
                    @(car.IsReserved ? "No" : "Yes")
                </th>
                <th>
                    <a class="btn btn-info" asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">Details</a>
                </th>
            </tr>
                        }
    </tbody>
</table>
