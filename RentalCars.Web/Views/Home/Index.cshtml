@model HomeIndexViewModel

@{
    ViewData["Title"] = "Car For Rent";
}

<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Please chouse car for rent!</h1>
</div>

<div class="row">
    <form asp-action="Search">
        <div class="col-md-6">
            <input asp-for="SearchText" class="form-control" placeholder="Search in City..." />
        </div>
        <div class="col-md-2">
            <input type="hidden" asp-for="SearchInCity" />
            @*<label asp-for="SearchInCity"></label>*@
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default pull-right" value="Search" />
        </div>
    </form>
</div>

<br />

<div class="row home-page">
    @await Html.PartialAsync("_CarsListingsPartial", Model.Cars.Where(c => c.IsReserved == false))
</div>